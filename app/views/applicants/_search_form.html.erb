<div id='search_form'>
<form action='/applicants' method='get'>
<table>
  <tr>
    <td valign='top'>
      <table>
        <tr><td align='right'>Form title              </td><td><input type='text'     name='form_title'               value="<%= @pager.params['form_title']              %>" /></td></tr>
        <tr><td align='right'>First name              </td><td><input type='text'     name='first_name'               value="<%= @pager.params['first_name']              %>" /></td></tr>
        <tr><td align='right'>Last name               </td><td><input type='text'     name='last_name'                value="<%= @pager.params['last_name']               %>" /></td></tr>
        <tr><td align='right'>Email                   </td><td><input type='text'     name='email'                    value="<%= @pager.params['email']                   %>" /></td></tr>
        <tr><td align='right'>Phone                   </td><td><input type='text'     name='phone'                    value="<%= @pager.params['phone']                   %>" /></td></tr>
        <tr><td align='right'>Address                 </td><td><input type='text'     name='address'                  value="<%= @pager.params['address']                 %>" /></td></tr>
        <tr><td align='right'>Address2                </td><td><input type='text'     name='address2'                 value="<%= @pager.params['address2']                %>" /></td></tr>
        <tr><td align='right'>City                    </td><td><input type='text'     name='city'                     value="<%= @pager.params['city']                    %>" /></td></tr>
        <tr><td align='right'>State                   </td><td><input type='text'     name='state'                    value="<%= @pager.params['state']                   %>" /></td></tr>
        <tr><td align='right'>Zip                     </td><td><input type='text'     name='zip'                      value="<%= @pager.params['zip']                     %>" /></td></tr>
      </table>
    </td><td valign='top'>
      <table>
        <tr><td align='right'>Years experience        </td><td><input type='text'     name='years_experience'         value="<%= @pager.params['years_experience']        %>" style="width: 60px;" /></td></tr>        
        <tr><td align='right'>Driving school graduate </td><td><input type='checkbox' name='driving_school_graduate'  value='1'<%= @pager.params['driving_school_graduate'] == '1' ? " checked='true'" : '' %> /></td></tr>
        <tr><td align='right'>Currently employed      </td><td><input type='checkbox' name='currently_employed'       value='1'<%= @pager.params['currently_employed']      == '1' ? " checked='true'" : '' %> /></td></tr>                
        <tr><td align='right'>Moving violations       </td><td><input type='text'     name='moving_violations'        value="<%= @pager.params['moving_violations']       %>" style="width: 60px;" /></td></tr>
        <tr><td align='right'>Preventable accidents   </td><td><input type='text'     name='preventable_accidents'    value="<%= @pager.params['preventable_accidents']   %>" style="width: 60px;" /></td></tr>
        <tr><td align='right'>Dui                     </td><td><input type='checkbox' name='dui'                      value='1'<%= @pager.params['dui']                     == '1' ? " checked='true'" : '' %> /></td></tr>
        <tr><td align='right'>Possible Duplicate      </td><td><input type='checkbox' name='possible_duplicate'       value='1'<%= @pager.params['possible_duplicate']      == '1' ? " checked='true'" : '' %> /></td></tr>
        <tr><td align='right'>Approved                </td><td><input type='checkbox' name='approved'                 value='1'<%= @pager.params['approved']                == '1' ? " checked='true'" : '' %> /></td></tr>
      </table>
    </td><td valign='top'>
      <table>
        <tr><td valign='top' align='right'>License type</td><td valign='top'>
          <table>              
            <tr><td><%= raw pager_checkbox(@pager, 'license_type_a'      , 'Class A'             ) %></td></tr> 
            <tr><td><%= raw pager_checkbox(@pager, 'license_type_b'      , 'Class B'             ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'license_type_c'      , 'Class C'             ) %></td></tr>
          </table>
        </td></tr>
        <tr><td valign='top' align='right'>Driver type</td><td valign='top'>
            <table>
              <tr><td><%= raw pager_checkbox(@pager, 'driver_type_company' , 'Company Driver'      ) %></td></tr>
              <tr><td><%= raw pager_checkbox(@pager, 'driver_type_owner'   , 'Owner Operator'      ) %></td></tr>
              <tr><td><%= raw pager_checkbox(@pager, 'driver_type_team'    , 'Team Driver'         ) %></td></tr>
              <tr><td><%= raw pager_checkbox(@pager, 'driver_type_student' , 'Student Driver'      ) %></td></tr>
              <tr><td><%= raw pager_checkbox(@pager, 'driver_type_lease'   , 'Lease Purchase'      ) %></td></tr>
            </table>
        </td></tr>
        <tr><td valign='top' align='right'>Distance</td><td valign='top'>
          <table>
            <tr><td><%= raw pager_checkbox(@pager, 'distance_local'      , 'Local'               ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'distance_dedicated'  , 'Dedicated'           ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'distance_regional'   , 'Regional'            ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'distance_otr'        , 'OTR (Over-the-Road)' ) %></td></tr>
          </table>      
        </td></tr>        
        <tr><td valign='top' align='right'>Haul Type</td><td valign='top'>
          <table>                        
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_dry_van'     , 'Dry Van'           ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_flatbed'     , 'Flatbed'           ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_reefer'      , 'Reefer'            ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_tanker'      , 'Tanker'            ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_hazmat'      , 'Hazmat'            ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_auto_hauler' , 'Auto Hauler'       ) %></td></tr>
            <tr><td><%= raw pager_checkbox(@pager, 'haul_type_specialized' , 'Specialized'       ) %></td></tr>
          </table>      
        </td></tr>      
      </table>
    </td>
  </tr>
</table>
<p><input type='submit' value='Search' /></p>
</form>
</div>

<% content_for :caboose_css do %>
<style type='text/css'>
#content input[type=checkbox] { position: relative; height: auto; top: 0; left: 0; }
#search_form { display: none; border: #ccc 1px solid; background: #efefef; padding: 20px; margin-bottom: 20px; }
#search_form label { margin: 0; padding: 0; }

</style>
<% end %>