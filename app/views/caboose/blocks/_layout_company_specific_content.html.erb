<div class="company-specific">
  <div class="constrain">

    
    <div class="left-content">

      <div class="current-jobs">
        <h1 class="top">Melton Truck Lines Truck Driver Job Application</h1>
      </div>

      <div class="company-container">

        <div class="profile-section clearfix">
          <div class="logo-container">
            <div class="logo-holder">
              <img src="//d2ju3eumzwbxuv.cloudfront.net/assets/company_logos/melton_logo.png" alt="Company Name" class="logo">
            </div>
          </div>
          <div class="buttons">
            <p class="head">Call:</p>
            <p class="phone">888-719-7631</p>
            <p class="head">Visit:</p>
            <p class="website">
              <a href="http://www.driveforhubgrouptrucking.com" title="Hub Group Trucking">www.meltontruck.com</a>
            </p>
            <p class="head">or Apply Now >></p>
          </div>
        </div>

        <div class="section job-benefits">
          <h3 class="section-title">Job Benefits</h3>
          <ul class="benefit-list">
            <li>Cost Driver Benefits: <span class="green">$30 to $76 p/month</span></li>
            <li>Cost Family Benefits: <span class="green">$125 to $337 p/month</span></li>
            <li>Dental: YES</li>
            <li>Vision: YES</li>
            <li>Retirement: YES</li>
          </ul>
        </div>

        <div class="section job-qualifications">
          <h3 class="section-title">Job Qualifications:</h3>
          <ul class="qualification-list">
            <li>Class A License</li>
            <li>0-6 mths Experience</li>
            <li>At least 21 years of age</li>
            <li>No more than 4 moving violations in the last 3 years</li>
            <li>No more than 3 preventable accidents in the last 3 years</li>
            <li>DUI/DWI must be at least 5 years old</li>
          </ul>
        </div>

      </div>

    </div><!-- end left-content --> 

    <div class="right-sidebar">

      <%= render 'layouts/sidebar_application', :company_title => "Melton Truck Lines" %>

    </div><!-- end right-sidebar --> 

  </div>
</div>
