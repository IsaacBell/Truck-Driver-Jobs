<%= render :partial => 'companies/admin_header' %>

<p>Overview       </p><p><div id='company_<%= @company.id %>_overview'       ></div></p>
<p>Qualifications </p><p><div id='company_<%= @company.id %>_qualifications' ></div></p>
<p>Benefits       </p><p><div id='company_<%= @company.id %>_benefits'       ></div></p>
<p>Extras         </p><p><div id='company_<%= @company.id %>_extras'         ></div></p>
        
<div id="message"></div>

<%= render :partial => 'companies/admin_footer' %>

<% content_for :caboose_js do %>
<%= javascript_include_tag "caboose/model/all" %>
<script type="text/javascript">

$(document).ready(function() {
  m = new ModelBinder({
    name: 'Company',
    id: <%= @company.id %>,
    update_url: '/admin/companies/<%= @company.id %>',
    authenticity_token: '<%= form_authenticity_token %>',
    attributes: [      
      { name: 'overview'       , nice_name: 'Overview'       , type: 'richtext', value: <%= raw Caboose.json(@company.overview       ) %>, width: 800, height: 350 },
      { name: 'qualifications' , nice_name: 'Qualifications' , type: 'richtext', value: <%= raw Caboose.json(@company.qualifications ) %>, width: 800, height: 350 },
      { name: 'benefits'       , nice_name: 'Benefits'       , type: 'richtext', value: <%= raw Caboose.json(@company.benefits       ) %>, width: 800, height: 350 },
      { name: 'extras'         , nice_name: 'Extras'         , type: 'richtext', value: <%= raw Caboose.json(@company.extras         ) %>, width: 800, height: 350 }
    ]
  });  
});

</script>
<%= raw caboose_tinymce %>
<% end %>
