<div id='search_form'>
<form action='/admin/logs' method='get'>
<table>
  <tr><td align='right'>Batch ID:   </td><td><input type='text' name='batch_id'      value="<%= @pager.params['batch_id'      ] %>" style='width: 100px;' /></td></tr>
  <tr><td align='right'>Mailout:    </td><td>  
    <select name='mailout_id'>
      <option value=''>-- Any Mailout --</option>
      <% Mailout.reorder(:company_id, :name).all.each do |m| %>
        <option value='<%= m.id %>'<% if @pager.params['mailout_id'].to_i == m.id %> selected='true'<% end %>><%= m.company.name %> - <%= m.name %></option>
      <% end %>
    </select>
  </td></tr>    
  <tr><td align='right'>Date sent:  </td><td><input type='text' name='date_sent_gte' value="<%= @pager.params['date_sent_gte' ] %>" style='width: 250px;' /> -
                                             <input type='text' name='date_sent_lte' value="<%= @pager.params['date_sent_lte' ] %>" style='width: 250px;' /></td></tr>
  <tr><td align='right'>Body:       </td><td><input type='text' name='body_like'     value="<%= @pager.params['body_like'     ] %>" style='width: 100px;' /></td></tr>
</table>
<p><input type='submit' value='Search' /></p>
</form>
</div>

<% content_for :caboose_css do %>
<style type='text/css'>
#content input[type=checkbox] { position: relative; height: auto; top: 0; left: 0; }
#search_form { display: none; border: #ccc 1px solid; background: #efefef; padding: 20px; margin-bottom: 20px; }
#search_form label { margin: 0; padding: 0; }
</style>
<% end %>